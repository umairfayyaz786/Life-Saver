<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".User.ConfirmBooking">

    <TextView
        android:id="@+id/YourAmbulance"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Your Ambulance"
        android:textColor="@color/Gray"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/LifeSupport"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/YourAmbulance"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Emergency Life Support"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ConfirmBookingAmbulance"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/LifeSupport"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/splashlogo2" />

    <TextView
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="5dp"
        android:layout_below="@+id/ConfirmBookingAmbulance"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:background="@color/main_color" />

    <TextView
        android:id="@+id/ArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Arrival Time"
        android:textColor="@color/Gray"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Time"
        android:layout_below="@+id/ArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="32 minutes"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Distance"
        android:textColor="@color/Gray"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Time"
        android:layout_below="@+id/ArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="5.2 KM"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Price"
        android:textColor="@color/Gray"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pkr"
        android:layout_below="@+id/ArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="1500 PKR"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Confirm_Booking"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Time"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnroundbg"
        android:backgroundTint="@color/main_color"
        android:gravity="center"
        android:text="Confirm Booking"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Medical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/Confirm_Booking"
        android:drawableLeft="@drawable/addmedical"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Add medical requirements"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp" />


    </RelativeLayout>