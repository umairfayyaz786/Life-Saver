<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Driver.AddAmbulance">

    <TextView
        android:id="@+id/UberAmbulance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Add Ambulance"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/Welcome"
        android:layout_below="@+id/UberAmbulance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/user100"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/AmbRegister"
        android:layout_below="@id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:backgroundTint="#EDEDED"
        android:background="@drawable/roundbackground"
        android:hint="Enter Ambulance Registration Number"
        android:textColorHint="#A19D9D"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/AmbModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/AmbRegister"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#EDEDED"
        android:background="@drawable/roundbackground"
        android:hint="Enter Ambulance Model Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#A19D9D"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/Ambphone"
        android:layout_below="@id/AmbModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:backgroundTint="#EDEDED"
        android:background="@drawable/roundbackground"
        android:hint="Enter Phone Number"
        android:textColorHint="#A19D9D"
        android:textSize="14sp"
        android:inputType="number"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/addAMb"
        android:layout_below="@+id/Ambphone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="@color/teal_200"
        android:background="@drawable/btnroundbg"
        android:text="Add Ambulance"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</RelativeLayout>