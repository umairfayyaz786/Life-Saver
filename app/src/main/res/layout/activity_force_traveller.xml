<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Driver.ForceTraveller">


    <RelativeLayout
        android:id="@+id/force_traveller"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#EDEDED">

        <TextView
            android:id="@+id/YourAmbulance"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Your Ambulance"
            android:textColor="@color/Gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Ft"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/YourAmbulance"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Force Traveller"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/Ambulance"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/force_traveller"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/splashlogo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Ambulance"
        android:layout_marginTop="20dp"
        android:background="#EDEDED"
        android:orientation="vertical">

        <TextView
            android:id="@+id/line"
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_below="@+id/ConfirmBookingAmbulance"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@color/main_color" />

        <TextView
            android:id="@+id/YourAmbulance"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Your Ambulance"
            android:textColor="@color/Gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Ft"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="LHZ 1901"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/userlinear"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/Gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Medical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:drawableLeft="@drawable/user50"
                android:gravity="start"
                android:padding="20dp"
                android:text="Hello Mujtaba Abid \n +923224344698"
                android:textColor="#EDEDED"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/Accept_rides"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Dark_blue"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/arrow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/tick"
                android:text="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:text="Accept Rides"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Tap here to start"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Ambulance"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/add"
        android:gravity="center"
        android:text="Add New Ambulance"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        />

</RelativeLayout>